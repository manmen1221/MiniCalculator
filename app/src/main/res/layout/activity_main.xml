<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/显示栏"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cursorVisible="true"
        android:editable="false"
        android:gravity="right"
        android:text="" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/按钮清除"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="C"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="7"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮百分号"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="%"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/按钮除"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="÷"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="5"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="8"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="0"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/按钮乘"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="×"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="3"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="6"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="9"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮点"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="·"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/按钮退格"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="←"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮减"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="－"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮加"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="＋"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/按钮等于"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="＝"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>